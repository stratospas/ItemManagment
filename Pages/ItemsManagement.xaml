<Page x:Class="ItemManagment.Pages.ItemsManagement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ItemManagment.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1080"
      Title="ItemsManagement">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="42*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#FF636363">
            <Button Content="Υλικά" Style="{StaticResource NoHover}" Margin="5,3" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" />
            <Button Content="Μεταφορές" Style="{StaticResource NoHover}" Margin="5,3" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White"/>
            <Button Content="Διαγραφές" Style="{StaticResource NoHover}" Margin="5,3" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White"/>
        </StackPanel>


        <StackPanel Grid.Row="1" Orientation="Horizontal" Background="#FFE4E4E4" Height="40">
            <Button Content="Νέο Υλικό" Style="{StaticResource NoHover}" Margin="5" Background="#FFB35252" Click="Button_Click" />
            <Button Content="Νέα Μεταφορά" Style="{StaticResource NoHover}" Margin="5" Background="#FFB35252"/>
            <Button Content="Νέα Διαγραφή" Style="{StaticResource NoHover}" Margin="5" Background="#FFB35252" />
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <ListView Grid.Column="1" Name="ItemData" HorizontalAlignment="Stretch">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="α/α" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Id}" TextAlignment="Center" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>


                        <GridViewColumn Header="Κωδικός" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Internal_code}" TextAlignment="Center" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>


                        <GridViewColumn Header="Περιγραφή" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Description}" TextAlignment="Center" MaxWidth="350" ToolTip="{Binding Description}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Header="s/n" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Serial_number}" TextAlignment="Center" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                    </GridView>

                </ListView.View>
            </ListView>
            
        </Grid>


